apiVersion: v1
kind: Secret
metadata:
  name: app-secrets
  namespace: apresentacao
  labels:
    app: apresentacao
    environment: production
type: Opaque
stringData:
  # Database Credentials (AWS RDS via Proxy)
  DATABASE_PASSWORD: "SUBSTITUA_AQUI"
  DATABASE_USERNAME: postgres
  DATABASE_USER: postgres

  # Database Connection Strings (via RDS Proxy with TLS)
  # RDS Proxy endpoint: proxy-db-viverdb.proxy-cb8m6qcy2cyh.sa-east-1.rds.amazonaws.com
  # NOTE: sslmode=require is mandatory for RDS Proxy

  # Rails Secret Key
  SECRET_KEY_BASE: "SUBSTITUA_AQUI"

  # API Tokens
  X_API_KEY_CONNECT: "SUBSTITUA_AQUI"
  HIDRA_TOKEN: "SUBSTITUA_AQUI"

  # Monitoring (contains token)
  SENTRY_URL: "https://SUBSTITUA_AQUI@sentry.bigdatasys.net/26"

# ====================================================================
# IMPORTANTE: N√ÉO COMMITAR ESTE ARQUIVO COM SENHAS REAIS!
# ====================================================================
#
# Para criar o Secret no cluster, use o script:
#   ./create-secrets.sh
#
# Ou crie manualmente com kubectl:
#   kubectl create secret generic app-secrets \
#     --from-literal=DATABASE_PASSWORD='...' \
#     --from-literal=SECRET_KEY_BASE='...' \
#     --from-literal=X_API_KEY_CONNECT='...' \
#     --from-literal=HIDRA_TOKEN='...' \
#     --from-literal=SENTRY_URL='...' \
#     --namespace apresentacao
# ====================================================================
