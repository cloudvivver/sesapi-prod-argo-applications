{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3AudioCacheAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:HeadObject"
      ],
      "Resource": "arn:aws:s3:::cuidar-storage/c-tv/cache/*"
    },
    {
      "Sid": "AllowS3ListBucket",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket"
      ],
      "Resource": "arn:aws:s3:::cuidar-storage",
      "Condition": {
        "StringLike": {
          "s3:prefix": "c-tv/cache/*"
        }
      }
    }
  ]
}
